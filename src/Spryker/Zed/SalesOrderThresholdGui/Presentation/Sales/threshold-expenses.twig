{% for expense in order.expenses %}
    {% if expense.type == thresholdExpenseType %}
        <div class="col-xs-8">
            <p>
                {{ 'Surcharge' | trans }}
            </p>
        </div>
        <div class="col-xs-4"><p>{{ expense.sumPrice | money(true, order.currencyIsoCode) }}</p></div>
    {% endif %}
{% endfor %}
